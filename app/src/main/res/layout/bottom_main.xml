<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentInsetStart="0dp"
        android:theme="@style/AppTheme"
        android:background="#ffffff">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <LinearLayout
                android:id="@+id/ll_check_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/iv_check_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="2"
                    android:src="@drawable/check_icon"/>

            <TextView
                    android:id="@+id/txt_check_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:text="출결"
                    android:textSize="8dp"
                    android:textColor="#747474"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/ll_qrcode_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/iv_qrcode_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="2"
                    android:src="@drawable/qrcode_icon"/>

            <TextView
                    android:id="@+id/txt_qrcode_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:text="QR"
                    android:textSize="8dp"
                    android:textColor="#747474"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/ll_home_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/iv_home_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="2"
                    android:src="@drawable/home_icon"/>

            <TextView
                    android:id="@+id/txt_home_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:text="홈"
                    android:textSize="8dp"
                    android:textColor="#0d2d84"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/ll_message_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/iv_message_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="2"
                    android:src="@drawable/message_icon"/>

            <TextView
                    android:id="@+id/txt_message_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:text="메시지"
                    android:textSize="8dp"
                    android:textColor="#747474"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/ll_setting_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/iv_setting_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="2"
                    android:src="@drawable/setting_icon"/>

            <TextView
                    android:id="@+id/txt_setting_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:text="설정"
                    android:textSize="8dp"
                    android:textColor="#747474"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.Toolbar>